{
	"tasks": {
		"build": "deno run --allow-read=. --allow-write=build --allow-net --allow-run build.ts",
		"serve": "deno run --allow-read=. --allow-write=build --allow-net --allow-run build.ts --serve --port 8081",
		"dev": "deno run --allow-read=. --allow-write=build --allow-net --allow-run build.ts --serve --port 9091 --debug",
		"clean": "rm -r build"
	},
	"imports": {
		"@olli/async-lock": "jsr:@olli/async-lock@^1.0.2",
		"@std/async": "jsr:@std/async@^1.0.12",
		"@std/cli": "jsr:@std/cli@^1.0.16",
		"@std/fmt": "jsr:@std/fmt@^1.0.6",
		"@std/fs": "jsr:@std/fs@^1.0.16",
		"@std/path": "jsr:@std/path@^1.0.8",
		"@lambdaurora/libhtml": "jsr:@lambdaurora/libhtml@^1.3.2",
		"@lambdaurora/libmd": "jsr:@lambdaurora/libmd@^2.3.1",
		"@prism.js": "npm:prismjs@1.27",
		"@katex/": "https://cdn.jsdelivr.net/npm/katex@0.16.8/dist/",
		"@core/asyncutil/": "jsr:/@core/asyncutil@^1.1.1/",
		"@lambdaurora/lambdawebserver": "jsr:@lambdaurora/lambdawebserver@^3.0.0",
		"@oak/oak": "jsr:@oak/oak@^16.0.0"
	},
	"fmt": {
		"useTabs": true
	},
	"lock": false
}
