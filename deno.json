{
  "tasks": {
    "build": "deno run --allow-read=. --allow-write=build --allow-net --allow-run build.ts",
    "serve": "deno run --allow-read=. --allow-write=build --allow-net --allow-run build.ts --serve --port 8081",
    "dev": "deno run --allow-read=. --allow-write=build --allow-net --allow-run build.ts --serve --port 8081 --debug",
    "clean": "rm -r build"
  },
  "importMap": "./import_map.json",
  "fmt": {
    "options": {
      "useTabs": true
    }
  },
  "lock": false
}